void Check_Abe(float front_dist, uint32 left_vel, uint32 right_vel){
    if (Get_L_Dir() || Get_R_Dir())
    if (front_dist > 20) return;
    else if (front_dist < 10) {
        Set_Brake(0, 1);
        Set_Brake(1, 1);
        Motor_Set_Left(0, 0, 1); //brake = 1;
        Motor_Set_Right(0, 0, 1); //brake = 1;
    }
    else{
        uint32 avg_vel = (left_vel + right_vel)/2;
//        if (avg_vel > 0.8*MAX_VEL && front_dist < 15){
//            Set_Brake(0, 1);
//            Set_Brake(1, 1);
//            Motor_Set_Left(0, 0, 1); //brake = 1;
//            Motor_Set_Right(0, 0, 1); //brake = 1;
//        }
//        else if (avg_vel > 0.5*MAX_VEL && front_dist < 12){
//            Set_Brake(0, 1);
//            Set_Brake(1, 1);
//            Motor_Set_Left(0, 0, 1); //brake = 1;
//            Motor_Set_Right(0, 0, 1); //brake = 1;
//        }
    }
}
